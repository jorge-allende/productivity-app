{
  "name": "productivity-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/react-router-dom": "^5.3.3",
    "auth0-js": "^9.28.0",
    "clsx": "^2.1.1",
    "convex": "^1.25.4",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.525.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hot-toast": "^2.5.2",
    "react-router-dom": "^6.30.1",
    "react-scripts": "5.0.1",
    "tailwind-merge": "^3.3.1",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4",
    "zustand": "^4.5.7"
  },
  "scripts": {
    "start": "react-scripts start",
    "prebuild": "mkdir -p src/convex && cp -r convex/_generated src/convex/",
    "build": "react-scripts build",
    "postbuild": "rm -rf src/convex/_generated",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "test:ci": "npm test -- --coverage --watchAll=false --testTimeout=10000",
    "lint": "eslint src --ext .ts,.tsx --max-warnings 0",
    "pretypecheck": "mkdir -p src/convex && cp -r convex/_generated src/convex/",
    "typecheck": "tsc --noEmit",
    "posttypecheck": "rm -rf src/convex/_generated",
    "ci-local": "npm run typecheck && npm run lint && npm run test:ci && npm run build",
    "ci:test": "CI=true npm test -- --coverage --watchAll=false --testTimeout=10000",
    "ci:lint": "CI=true npx eslint src --ext .ts,.tsx --max-warnings 0",
    "ci:typecheck": "CI=true npm run typecheck",
    "ci:full": "CI=true ./scripts/test-ci-local.sh",
    "ci:quick": "CI=true npm run typecheck && npm run lint",
    "validate": "./validate.sh",
    "validate:full": "./scripts/pre-push-validation.sh",
    "prepush": "npm run typecheck && npm run lint && npm test -- --watchAll=false --passWithNoTests"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/auth0-js": "^9.21.6",
    "@types/node": "^24.0.13",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17"
  }
}
